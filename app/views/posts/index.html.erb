<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-dismissible alert-info mt-4">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <span><%= flash[:notice] %></span>
    </div>
  <% end %>
  <%= form_tag("/posts/create", class: "mt-4", method: :post) do %>
  <fieldset>
    <div class="form-group d-flex flex-row">
      <%= image_tag("/user_images/default.jpg", class: "rounded-circle size-35 mr-4") %>
      <div class="flex-fill">
        <textarea class="form-control" rows="3" name="content" placeholder="いまどうしてる？"></textarea>
      </div>
      <div class="ml-4">
        <button type="submit" class="btn btn-primary">投稿</button>
      </div>
    </div>
    </fieldset>
  <% end %>
  <% @posts.each do |post| %>
    <%= link_to("/posts/#{post.id}", class: "card mt-4") do %>
      <div class="card-body d-flex flex-row">
        <%= image_tag("/user_images/default.jpg", class: "rounded-circle size-50 mr-4") %>
        <div class="d-flex flex-column">
          <div class="d-flex flex-row align-items-end mb-2">
            <h5 class="mr-4 mb-0">ユーザー名</h5>
            <small class="text-muted"><%= time_ago_in_words(post.created_at) %>前</small>
          </div>
          <%= simple_format(post.content, class: "card-text") %>
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex align-items-center">
          <div class="btn-group" role="group">
            <% if post.id % 3 == 0 %>
              <button type="button" class="btn btn-secondary liked"><i class="fas fa-heart mr-2"></i><span>15</span></button>
            <% else %>
              <button type="button" class="btn btn-secondary"><i class="far fa-heart mr-2"></i><span>14</span></button>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
