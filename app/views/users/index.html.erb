<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-dismissible alert-info mt-4">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <span><%= flash[:notice] %></span>
    </div>
  <% end %>
  <% @users.each do |user| %>
    <%= link_to("/users/#{user.id}", class: "card mt-4") do %>
      <div class="card-body d-flex flex-row align-items-center">
        <%= image_tag("/user_images/#{user.image_name}", class: "rounded-circle size-50 mr-4") %>
        <div class="d-flex flex-column">
            <h5 class="mb-1"><%= user.name %></h5>
            <small class="text-muted">登録日: <%= user.created_at.in_time_zone('Asia/Tokyo').strftime("%Y-%m-%d") %></small>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= paginate @users %>
</div>
